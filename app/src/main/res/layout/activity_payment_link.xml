<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentLinkActivity">

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter amount"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etCustomerGid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter customer Gid"
        app:layout_constraintTop_toBottomOf="@id/etAmount" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name"
        app:layout_constraintTop_toBottomOf="@id/etCustomerGid" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter email"
        app:layout_constraintTop_toBottomOf="@id/etName" />

    <EditText
        android:id="@+id/etPhoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter phone code"
        app:layout_constraintTop_toBottomOf="@id/etEmail" />

    <EditText
        android:id="@+id/etDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select due date (optional) "
        app:layout_constraintTop_toBottomOf="@id/etPhoneNo"
        android:focusable="false"/>

    <Spinner
        android:id="@+id/spinnerNotificationType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:entries="@array/notification_types"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/etDueDate" />

    <CheckBox
        android:id="@+id/cbUpi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="UPI"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerNotificationType" />

    <CheckBox
        android:id="@+id/cbCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="CARD"
        app:layout_constraintLeft_toRightOf="@id/cbUpi"
        app:layout_constraintTop_toTopOf="@id/cbUpi" />

    <CheckBox
        android:id="@+id/usBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="ACH"
        app:layout_constraintLeft_toRightOf="@id/cbCard"
        app:layout_constraintTop_toTopOf="@id/cbCard" />

    <CheckBox
        android:id="@+id/indBank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Net Banking"
        app:layout_constraintLeft_toRightOf="@id/usBank"
        app:layout_constraintTop_toTopOf="@id/usBank" />

    <Spinner
        android:id="@+id/spinnerCurrencyType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:entries="@array/currencies"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/cbUpi" />

    <Button
        android:id="@+id/btnPaymentLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="payment link"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinnerCurrencyType" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnPaymentLink">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/btnAccount" />

            <TextView
                android:id="@+id/tvResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/btnAccount" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>