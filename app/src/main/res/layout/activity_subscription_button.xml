<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubscriptionButtonActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".SubscriptionButtonActivity">

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Plan Name"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etCustomerGid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Customer Gid"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/etName" />

        <EditText
            android:id="@+id/etPlanDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Plan Description"
            app:layout_constraintTop_toBottomOf="@id/etCustomerGid" />

        <EditText
            android:id="@+id/etPlanAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter amount"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/etPlanDescription" />

        <EditText
            android:id="@+id/etPlanQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Plan quantity"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/etPlanAmount" />

        <Spinner
            android:id="@+id/spinnerCurrencyType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:entries="@array/currencies"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/etPlanQuantity" />

        <LinearLayout
            android:id="@+id/billing_frequency_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/spinnerCurrencyType">

            <EditText
                android:id="@+id/etBillingPeriod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter Billing period (1)"
                android:inputType="number" />

            <Spinner
                android:id="@+id/spinnerBillingFrequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:entries="@array/billing_frequency"
                android:hint="Enter Billing frequency (MONTH)"
                android:padding="10dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/etTotalCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No of billing cycles to charged"
            android:inputType="number"
            app:layout_constraintTop_toBottomOf="@id/billing_frequency_lay" />

        <EditText
            android:id="@+id/etTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:hint="Enter start date"
            app:layout_constraintTop_toBottomOf="@id/etTotalCount" />

        <TextView
            android:id="@+id/tvCoupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coupon gid"
            app:layout_constraintTop_toBottomOf="@id/etTime" />

        <EditText
            android:id="@+id/etCouponGid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Coupon id"
            android:text="coupon-7c5d5fca88a841e0806a40da70999ade"
            app:layout_constraintTop_toBottomOf="@id/tvCoupon" />

        <TextView
            android:id="@+id/tvTaxRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tax rates"
            app:layout_constraintTop_toBottomOf="@id/etCouponGid" />

        <EditText
            android:id="@+id/etTaxRate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="tax rate id or leave empty"
            android:text="taxrates-d5cdc35c758844518623e8a4076ad57c"
            app:layout_constraintTop_toBottomOf="@id/tvTaxRate" />

        <EditText
            android:id="@+id/etTaxRate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="tax rate id or leave empty"
            app:layout_constraintTop_toBottomOf="@id/etTaxRate1" />

        <EditText
            android:id="@+id/etTaxRate3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="tax rate id or leave empty"
            app:layout_constraintTop_toBottomOf="@id/etTaxRate2" />

        <Button
            android:id="@+id/btnSubscriptionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscription Button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etTaxRate3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/btnSubscriptionButton"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/btnAccount" />

            <TextView
                android:id="@+id/tvResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/btnAccount" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>