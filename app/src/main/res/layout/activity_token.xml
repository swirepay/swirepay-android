<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TokenActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etPrivateKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Public Key"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etAccountGid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Destination Account Gid"
        app:layout_constraintTop_toBottomOf="@id/etPrivateKey"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type"
        app:layout_constraintTop_toBottomOf="@id/etAccountGid"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etCvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cvv"
        app:layout_constraintTop_toBottomOf="@id/etType"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etExpiryMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ExpiryMonth"
        app:layout_constraintTop_toBottomOf="@id/etCvv"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etExpiryYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ExpiryYear"
        app:layout_constraintTop_toBottomOf="@id/etExpiryMonth"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        app:layout_constraintTop_toBottomOf="@id/etExpiryYear"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Card Number"
        app:layout_constraintTop_toBottomOf="@id/etName"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/etScheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Scheme"
        app:layout_constraintTop_toBottomOf="@id/etNumber"/>

    <Button
        android:id="@+id/btnToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOKEN"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etScheme" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnToken" />

    <TextView
        android:id="@+id/tvResponse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tvResult"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>