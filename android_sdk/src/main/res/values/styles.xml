<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NoActionbar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="EditText_Bg">
        <item name="android:height">45dp</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge" />

    <style name="SwirepayCheckout" parent="AppTheme" />

    <style name="SwirepayCheckout.Image" />

    <style name="SwirepayCheckout.Card" />

    <style name="SwirepayCheckout.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="SwirepayCheckout.Card.CardNumberInput" parent="SwirepayCheckout.TextInputEditText">
        <item name="android:hint">@string/checkout_card_number_hint</item>
    </style>

    <style name="SwirepayCheckout.Card.ExpiryDateInput" parent="SwirepayCheckout.TextInputEditText">
        <item name="android:hint">@string/checkout_card_expiry_date_hint</item>
        <item name="android:inputType">date</item>
        <item name="android:maxLength">5</item>
    </style>

    <style name="SwirepayCheckout.Card.SecurityCodeInput" parent="SwirepayCheckout.TextInputEditText">
        <item name="android:hint">@string/checkout_card_security_code_hint</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">3</item>
    </style>

    <style name="SwirepayCheckout.Card.HolderNameInput" parent="SwirepayCheckout.TextInputEditText">
        <item name="android:hint">@string/checkout_card_holder_hint</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="SwirepayCheckout.Card.MobileInput" parent="SwirepayCheckout.TextInputEditText">
        <item name="android:hint">@string/checkout_mobile_number_hint</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="SwirepayCheckout.Card.BankInput" parent="SwirepayCheckout.TextInputEditText">
        <item name="android:hint">@string/more_banks</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="SwirepayCheckout.Card.BrandRecognitionLogoContainerGroup">
        <item name="android:layout_marginStart">@dimen/standard_quarter_margin</item>
        <item name="android:layout_marginLeft">@dimen/standard_quarter_margin</item>
        <item name="android:layout_gravity">end|top</item>
        <item name="android:layout_marginTop">@dimen/cardList_top_margin</item>
        <item name="android:layout_marginEnd">@dimen/standard_three_quarters_margin</item>
        <item name="android:layout_marginRight">@dimen/standard_three_quarters_margin</item>
    </style>

    <style name="SwirepayCheckout.Card.BrandRecognitionLogo" parent="SwirepayCheckout.Image.CardLogo">
        <item name="android:src">@drawable/ic_card</item>
    </style>

    <style name="SwirepayCheckout.Card.BrandRecognitionLogoContainer">
        <item name="android:paddingStart">@dimen/standard_quarter_margin</item>
        <item name="android:paddingEnd">@dimen/standard_quarter_margin</item>
        <item name="android:paddingTop">@dimen/standard_half_margin</item>
        <item name="android:paddingBottom">@dimen/standard_half_margin</item>
    </style>

    <style name="SwirepayCheckout.Image.CardLogo">
        <item name="android:layout_width">@dimen/brand_logo_width</item>
        <item name="android:layout_height">@dimen/brand_logo_height</item>
    </style>


    <style name="SwirepayCheckout.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="hintTextColor">@color/primaryColor</item>
        <item name="android:minHeight">@dimen/input_layout_height</item>
    </style>

    <style name="SwirepayCheckout.DropdownTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="android:minHeight">@dimen/input_layout_height</item>
    </style>

    <style name="SwirepayCheckout.TextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:textCursorDrawable">@drawable/cursor_shape</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>