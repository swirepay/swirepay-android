<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:orientation="vertical">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <RadioButton
            android:id="@+id/gpay"
            android:layout_width="wrap_content"
            android:background="@drawable/selectablebg"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableStart="@drawable/ic_gpay" />

        <RadioButton
            android:id="@+id/paytm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selectablebg"
            android:layout_marginLeft="16dp"
            android:button="@null"
            android:drawableStart="@drawable/ic_paytm" />

        <RadioButton
            android:id="@+id/phonepe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selectablebg"
            android:layout_marginLeft="16dp"
            android:button="@null"
            android:drawableStart="@drawable/ic_phonepe" />

        <RadioButton
            android:id="@+id/amazonPay"
            android:layout_width="wrap_content"
            android:button="@null"
            android:background="@drawable/selectablebg"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:drawableStart="@drawable/ic_amazon_pay" />

    </RadioGroup>

