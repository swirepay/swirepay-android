    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout_mobile"
        style="@style/SwirepayCheckout.TextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <com.swirepay.android_sdk.checkout.views.SwirepayTextInputEditText
            android:id="@+id/editText_mobile"
            style="@style/SwirepayCheckout.Card.MobileInput"
            android:nextFocusDown="@+id/editText_postalCode"
            android:nextFocusForward="@+id/editText_postalCode"
            tools:ignore="RequiredSize" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/debit_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="UPI ID should be in the format mobilenumber or \nmobilenumber@bank or username@bank." />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/switch_storePaymentMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Save UPI ID"
        android:visibility="gone"/>

    <com.swirepay.android_sdk.checkout.views.FadedDisableButton
        android:id="@+id/payNowUpi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primaryColor"
        android:enabled="false"
        android:layout_marginTop="16dp"
        android:text="Verify Pay"
        android:textColor="@color/white"
        app:cornerRadius="5dp" />

